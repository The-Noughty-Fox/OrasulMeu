<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_05"
    android:layout_marginTop="@dimen/margin_05"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17sp"
        tools:text="str. Stefan cel Mare 103" />

    <TextView
        android:id="@+id/text_view_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_025"
        android:textColor="@color/grey_search"
        android:textSize="15sp"
        tools:text="Botanica, Chisinau" />

</LinearLayout>