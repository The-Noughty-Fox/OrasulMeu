<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="22dp"
    android:layout_height="28dp">

    <ImageView
        android:id="@+id/image_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pin_annotation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="2dp"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="@id/image_view_container"
        app:layout_constraintStart_toStartOf="@id/image_view_container"
        app:layout_constraintTop_toTopOf="@id/image_view_container"
        tools:src="@drawable/ic_company_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>